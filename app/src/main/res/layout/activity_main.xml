<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <!-- Christmas Tree Image -->
    <ImageView
        android:id="@+id/imgChristmasTree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_christmas_tree"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Christmas Party Performance Enrolment!"
        android:textSize="18sp" />

    <!-- Register Button -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgChristmasTree"
        android:layout_marginTop="24dp"
        android:text="Register"
        android:backgroundTint="?attr/colorPrimary"
       android:textColor="@android:color/white" />  <!-- Default to white for better readability -->

    <!-- View Participants Button -->
    <Button
        android:id="@+id/btnViewParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:layout_marginTop="16dp"
        android:text="View Participants"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white" /> <!-- Default to white -->

</RelativeLayout>
